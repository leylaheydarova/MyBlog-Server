@model CategoryCreateDto
@{
    ViewData["Title"] = "Create Category";
}

<div class="card card-primary card-outline mb-4">
    <!--begin::Header-->
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0">Create Category</h4>
    </div>
    <!--end::Header-->
    <!--begin::Form-->
    <form asp-action="Create" method="post" asp-antiforgery="true">
        <!--begin::Body-->
        <div class="card-body">
            <div class="mb-3">
                <label asp-for="@Model.Name" class="form-label">Name</label>
                <input asp-for="@Model.Name" class="form-control" placeholder="e.g. Technology" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
        </div>
        <!--end::Body-->
        <!--begin::Footer-->
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Create</button>
            <a class="btn btn-secondary" asp-area="admin" asp-controller="category" asp-action="index">Cancel</a>
        </div>
        <!--end::Footer-->
    </form>
    <!--end::Form-->
</div>