@model BlogGetVM

<div class="container">
    <h1 id="postTitle">@Model.BlogGetDto.Title</h1>
    <p id="postContent">@Model.BlogGetDto.Text</p>

    <hr>

    <h3>Write Comment</h3>
    <form asp-controller="Comment" asp-action="Add" method="post" asp-route-blogId="@Model.BlogGetDto.Id">
        <textarea asp-for="@Model.CommentText" class="input"></textarea>
        <button class="btn" onclick="addComment()">Send</button>
    </form>

    <h3>Comments</h3>
    <div id="commentList">
        @foreach(var comment in Model.CommentGetDto)
        {
            <div class="card shadow-sm">
                <h4>@comment.UserName</h4>
                <p>@comment.CommentText</p>
            </div>

            <form asp-controller="Comment" asp-action="Remove" method="post" asp-route-commentId="@comment.Id">
                <button type="submit">
                    <i class="fas fa-trash-alt"></i>
                </button>
            </form>
        }
    </div>
</div>