@model AppUserUpdateDto

<div class="profile-card">
    <h2>Update profile</h2>

    <form asp-action="Edit" method="post" asp-antiforgery="true">
        <div class="form-group">
            <label asp-for="@Model.Username">Username</label>
            <input asp-for="@Model.Username" />
        </div>

        <div class="form-group">
            <label asp-for="@Model.Password">Password</label>
            <input type="password" asp-for="@Model.Password" />
        </div>

        <div class="form-group">
            <label asp-for="@Model.Email">Email</label>
            <input asp-for="@Model.Email" />
        </div>

        <button type="submit" class="btn">Update</button>
        <a asp-controller="Home" asp-action="Index" class="btn secondary">Cancel</a>
    </form>
</div>
